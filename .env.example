# InfluxDB Configuration
# Your InfluxDB 2.x instance URL
INFLUX_URL=http://localhost:8086

# InfluxDB API token with read/write permissions to your org and buckets
# Get this from InfluxDB UI > Data > API Tokens
INFLUX_TOKEN=your-influx-api-token

# Your InfluxDB organization name
INFLUX_ORG=your-organization

# Bucket names (will be created automatically if they don't exist)
INFLUX_BUCKET_RECENT=homeassistant-recent
INFLUX_BUCKET_HISTORICAL=homeassistant-historical

# Home Assistant Database Configuration
# Path to your Home Assistant SQLite database file
# Common locations:
# - Docker: /config/home-assistant_v2.db
# - Home Assistant OS: /usr/share/hassio/homeassistant/home-assistant_v2.db  
# - Manual install: ~/.homeassistant/home-assistant_v2.db
HA_DB_PATH=/path/to/home-assistant_v2.db

# Processing Configuration
# Number of records to process in each batch (adjust based on memory/performance)
BATCH_SIZE=1000

# Maximum number of retries for failed operations
MAX_RETRIES=3

# Data Quality Configuration
# Enable automatic data validation and correction
ENABLE_DATA_VALIDATION=true

# Automatically fix detected data issues (NaN values, out-of-range data, etc.)
AUTO_CORRECT_ISSUES=true

# Entity Filtering Configuration
# Units of measurement to include (defaults cover most common sensor types)
INCLUDE_UNITS=kWh,W,°C,°F,%,kB/s,GB,MB,A,V,hPa,bar,mbar,lux,ppm,dB,rpm

# Domains to include in export (entity types)
INCLUDE_DOMAINS=sensor,counter,weather,climate,utility_meter

# Entity patterns to exclude (use %pattern% format)
EXCLUDE_PATTERNS=%availability%,%status%,%signal%,%connected%

# Logging Configuration
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Optional log file path
# LOG_FILE=./hastats.log

# Advanced Configuration (usually don't need to change these)
# InfluxDB operation timeout in seconds (for large deletions/operations)
INFLUX_TIMEOUT=300

# Enable detailed progress reporting
VERBOSE_PROGRESS=true

# Resume capability
RESUME_ENABLED=true
CHECKPOINT_FILE=./export_checkpoint.json